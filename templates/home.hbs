<div class="well">
    <div class="row">
        <div class="col-lg-4">
            <div class="input-group">
                {{input type="text" class="form-control col-lg-8 " placeholder="Search for Wine " value=search
                action="query"}}
            <span class="input-group-btn">
                <button class="btn btn-default btn-danger " type="button"><i class="fa fa-search "></i></button>
            </span>
            </div>
        </div>
    </div>
</div>


<br/>
<div class="row">
    <div class="col-lg-4">
        <ul class="list-group">
            {{#each model}}
            <li class="list-group-item">
                {{#link-to 'inventorysearch' name}}
                {{name}}
                {{/link-to}}
                <span class="badge text-right">{{id}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="col-lg-8">
        {{outlet}}
    </div>
</div>



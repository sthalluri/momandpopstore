<div class="row">
    <div class="col-lg-4">
        <div class="well">
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">
                        {{input type="text" class="form-control col-lg-8 " placeholder="Search for Wine " value=search
                        action="query"}}
                        <span class="input-group-btn">
                            <button class="btn btn-default btn-danger " type="button"><i class="fa fa-search "></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <ul class="list-group">
            {{#each model}}
            <li class="list-group-item">
                {{#link-to 'inventorysearch' name}}
                {{name}}
                {{/link-to}}
                <span class="badge text-right">{{id}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="col-lg-8">
        <div class="row">
            {{#each model}}
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{name}}</h3>
                    </div>
                    <div class="panel-body panel-product" >
                        <div class="shop-product">
                            <a href="shop-item.html"><img src="http://7.pdvop2sz.z8.ru/paperclip/1.0/img/macbook.png" class="img-responsive" alt="..."></a>
                            {{#link-to 'inventoryitem' id}}
                                <h5 class="primary-font ">{{name}}</h5>
                            {{/link-to}}
                            <p class="text-muted">
                                {{name}} : Short Description Here
                            </p>
                            <p>
                                $200,00
                            </p>
                        </div>
                    </div>
                    <div class="panel-footer text-center">
                        <button  {{action 'addToCart' this }} class="btn btn-sm btn-success"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>


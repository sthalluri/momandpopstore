<div class="row">
    <div class="col-lg-4">
        <div class="well well-sm">
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">
                        {{input type="text" class="form-control col-lg-8 " placeholder="Search for Wine " value=search
                        action="query"}}
                        <span class="input-group-btn">
                            <button class="btn btn-default btn-danger " type="button"><i class="fa fa-search "></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        {{outlet categorysection}}
    </div>
    <div class="col-lg-8">
        <div class="row">
            {{#each model}}
            <div class="col-lg-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{name}}</h3>
                    </div>
                    <div class="panel-body panel-product" >
                        <div class="shop-product">
                            <a href="shop-item.html"><img {{bindAttr src="imageURL"}} class="img-responsive" ></img></a>
                            {{#link-to 'inventoryitem' id}}
                                <h5 class="primary-font ">{{name}}</h5>
                            {{/link-to}}
                            <p class="text-muted">
                                {{name}}
                            </p>
                            <p>
                                ${{price}}
                            </p>
                        </div>
                    </div>
                    <div class="panel-footer text-center">
                        <button  {{action 'addToCart' this }} class="btn btn-sm btn-success"><i class="fa fa-shopping-cart"></i> Add To Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

